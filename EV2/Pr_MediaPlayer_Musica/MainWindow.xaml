<Window x:Class="Pr_MediaPlayer_Musica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr_MediaPlayer_Musica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button FontSize="20" Margin="10" Content="Musica ON" Click="btn_Play"/>
            <Button FontSize="20" Margin="10" Content="Musica PAUSE" Click="btn_Pause"/>
            <Button FontSize="20" Margin="10" Content="Musica STOP" Click="btn_Stop"/>
            <Button FontSize="20" Margin="10" Content="Volumen+" Click="btn_VolumeUp"/>
            <Button FontSize="20" Margin="10" Content="Volumen-" Click="btn_VolumeDown"/>
        </StackPanel>
    </Grid>
</Window>
